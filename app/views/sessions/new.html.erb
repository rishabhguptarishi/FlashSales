<section class='flashsale-form'>
  <%= form_tag do %>
    <h2>Please Log In</h2><br>
    <div class="field row">
      <%= label_tag :email, 'Email:', class: "col-md-4" %>
      <%= email_field_tag (:email),"", class: "col-md-8" %>
    </div>
    <div class="field row">
      <%= label_tag :password, 'Password:', class:"col-md-4" %>
      <%= password_field_tag :password, "", class: "col-md-8" %>
    </div>
    <div class="checkbox_field row">
      <%= check_box_tag :remember_me, 1,"", class:"col-md-1" %>
      <%= label_tag :remember_me, 'Remember Me', class:"col-md-4" %>
    </div>
    <br>
    <div class="actions">
      <%= submit_tag "Login" %>
    </div>
  <% end %>
  <div >
    <%= button_to "Sign Up", new_user_path, method: :get, class:"btn btn-secondary" %>
  </div>
  <p><%= link_to "forgotten password?", new_password_reset_path %></p>
</section>
