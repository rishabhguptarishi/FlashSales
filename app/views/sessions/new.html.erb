<section class='flashsale-form'>
  <% if notice %>
    <aside class="notice"> <%= notice %> </aside>
  <% end %>
  <% if flash[:alert] %>
    <aside class="notice"> <%= flash[:alert] %> </aside>
  <% end %>
  <%= form_tag do %>
    <h2>Please Log In</h2>
    <div class="field">
      <%= label_tag :email, 'Email:' %>
      <%= email_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag :password, 'Password:' %>
      <%= password_field_tag :password %>
    </div>
    <div class="field">
      <%= check_box_tag :remember_me, 1 %>
      <%= label_tag :remember_me %>
    </div>
    <div class="actions">
      <%= submit_tag "Login" %>
    </div>
  <% end %>
  <div class="button">
    <%= button_to "Sign Up", new_user_path, method: :get %>
  </div>
  <p><%= link_to "forgotten password?", new_password_reset_path %></p>
</section>
