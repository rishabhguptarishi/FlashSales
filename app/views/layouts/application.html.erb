<!DOCTYPE html>
<html>
  <head>
    <title>FlashSales</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/deals">Flash Sales</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto" >
          <li class="nav-item active">
            <a class="nav-link" href="/deals">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Deals</a>
              <div class="dropdown-menu" >
                <%= link_to "Past Deals", past_deals_path, class:"dropdown-item" %>
              </div>
          </li>
          <% if current_user %>
            <li class="nav-item">
              <%= link_to "My Orders", past_orders_path, class:"nav-link" %>
            </li>
            <% if current_user.is_admin? %>
              <li class="nav-item">
                <%= link_to "Admin", admin_deals_path, class:"nav-link" %>
              </li>
            <% end %>
            <% if session[:order_id] %>
              <li><%= button_to "Checkout", checkout_path, method: :get, class: "btn btn-primary" %></li>
            <% end %>
            <ul class="navbar-nav ml-auto">
              <li><%= button_to "Logout", logout_path, method: :get, class: "btn btn-outline-danger" %></li>
            </ul>
          <% end %>

        </ul>
      </div>
    </nav>
    <main class='<%= controller.controller_name%>'>
      <br>
      <%= render "layouts/notice", notice: notice %>
      <%= render "layouts/alert", alert: alert %>
      <%= yield %>
    </main>
  </body>
</html>
