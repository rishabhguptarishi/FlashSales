<!DOCTYPE html>
<html>
  <head>
    <title>FlashSales</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark">
      Flash Sales
      <% if current_user %>
        <% if current_user.is_admin? %>
          <%= button_to "Admin", admin_deals_path, method: :get, class: "btn btn-primary" %>
        <% end %>
        <%= button_to "Logout", logout_path, method: :get, class: "btn btn-outline-danger" %>
      <% end %>
    </nav>
    <main class='<%= controller.controller_name%> container'>
      <br>
      <%= render "layouts/notice", notice: notice %>
      <%= render "layouts/alert", alert: alert %>
      <%= yield %>
    </main>
  </body>
</html>
