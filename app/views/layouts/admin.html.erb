<!DOCTYPE html>
<html>
  <head>
    <title>FlashSales</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/deals">Flash Sales</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto" >
          <li class="nav-item active">
            <a class="nav-link" href="/deals">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Deals</a>
              <div class="dropdown-menu" >
                <%= link_to "All Deals", admin_deals_path, class:"dropdown-item" %>
                <%= link_to "Add a new deal", new_admin_deal_path, class:"dropdown-item" %>
              </div>
          </li>
          <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Reports</a>
              <div class="dropdown-menu" >
                <%= link_to "Total Revenue", admin_total_revenue_path, class:"dropdown-item" %>
                <%= link_to "Maximum Potential", admin_maximum_potential_path, class:"dropdown-item" %>
                <%= link_to "Minimum Potential", admin_minimum_potential_path, class:"dropdown-item" %>
                <%= link_to "Top Spending Customers", admin_top_spending_customers_path, class:"dropdown-item" %>
              </div>
          </li>
          <li class="nav-item">
            <%= link_to "Users", admin_users_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "All Orders", admin_orders_path, class:"nav-link" %>
          </li>
        </ul>
        <% if current_user %>
          <ul class="navbar-nav ml-auto">
            <li><%= button_to "Logout", logout_path, method: :get, class: "btn btn-outline-danger" %></li>
          </ul>
        <% end %>
      </div>
    </nav>
    <main class='admin-<%= controller.controller_name%>'>
      <br>
      <%= render "layouts/notice", notice: notice %>
      <%= render "layouts/alert", alert: alert %>
      <%= yield %>
    </main>
  </body>
</html>
