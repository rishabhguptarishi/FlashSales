<h2>Password Reset</h2>
<%= form_tag password_reset_index_path, method: :post do %>

  <div class="form-group row">
    <%= label_tag :email, "Email Id",class:"required" %>
    <%= email_field_tag :email, params[:email], class:"form-control" %>
    <small>Enter email on which password reset link will be sent</small>
  </div>

  <div class="actions">
    <%= submit_tag "Reset Password", class:"btn btn-success" %>
    <%= link_to "Log In to Existing Account", login_path, class:"btn btn-primary" %>
  </div>
<% end %>
<br>
<%= link_to 'Back', login_path %>
