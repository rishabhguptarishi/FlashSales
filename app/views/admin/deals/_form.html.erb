<%= form_with(model: [:admin, deal] ,local: true) do |form| %>
  <%= render "layouts/errors", errors: deal.errors %>

  <div class="form-group row">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 10, cols: 60,  class:"form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :price %>
    <%= form.number_field :price, step: :any, class:"form-control", min: 0 %>
  </div>

  <div class="form-group row">
    <%= form.label :discounted_price %>
    <%= form.number_field :discounted_price, step: :any, class:"form-control", min: 0 %>
  </div>

  <div class="form-group row">
    <%= form.label :publish_at, "Publish Date" %>
    <%= form.date_field :publish_at, value: Date.tomorrow, class:"form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, step: 1, class:"form-control", min: 0 %>
  </div>

  <div class="form-group", id="imagesGroup">
    <div class="input-group mb-3", id="imageInput">
      <div class="custom-file">
        <%= form.file_field :images, class:"custom-file-input" %>
        <%= form.label :images, "Choose an image to be uploaded", class:"custom-file-label" %>
      </div>
      <div class="input-group-append">
        <span class="input-group-text" id="">Upload</span>
      </div>
    </div>
  </div>
  <%= button_to "Add More Images..", "",class:"btn btn-secondary", data: { image: "add-more-images" } %>
  <%= javascript_pack_tag 'add_images_to_form' %>

  <%= form.submit "Create Deal", class:"btn btn-primary" %>
<% end %>
