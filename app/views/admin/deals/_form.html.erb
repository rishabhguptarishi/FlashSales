<%= form_with(model: [:admin, deal] ,local: true) do |form| %>
  <%= render "layouts/errors", errors: deal.errors %>

  <div class="form-group row">
    <%= form.label :title, class:"required" %>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :description, class:"required" %>
    <%= form.text_area :description, rows: 10, cols: 60,  class:"form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :price, class:"required" %>
    <%= form.number_field :price, step: :any, class:"form-control", min: 0 %>
  </div>

  <div class="form-group row">
    <%= form.label :discounted_price, class:"required" %>
    <%= form.number_field :discounted_price, step: :any, class:"form-control", min: 0 %>
  </div>

  <div class="form-group row">
    <%= form.label :publish_at, "Publish Date", class:"required" %>
    <%= form.date_field :publish_at, class:"form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :quantity, class:"required" %>
    <%= form.number_field :quantity, step: 1, class:"form-control", min: 0 %>
  </div>

  <div class="form-group", id="imagesGroup">
    <%= form.fields_for :images do |image| %>
      <%= render 'image', image: image %>
    <% end %>
  </div>
  <%= link_to "Add More Images..", "",class:"btn btn-secondary", data: { image: "add-more-images" } %>
  <%= form.submit "Submit Deal", class:"btn btn-primary" %>
<% end %>
<%= javascript_pack_tag 'add_images_to_form' %>
