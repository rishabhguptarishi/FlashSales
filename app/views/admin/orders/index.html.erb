<h1>Orders</h1>

<% if @orders.empty? %>
  <h3> There are no orders created right now</h3>
<% else %>
  <h5>Search by email</h5>
  <%= form_tag(admin_deals_path, method: :get) do %>
    <%= email_field_tag(:search, params[:search]) %>
    <%= submit_tag ("Search") %>
  <% end %>
  <table class="table table-hover">
    <%= paginate @orders %>
    <tbody>
      <% @orders.each do |order| %>
      <tr class="table-info">
        <td>
          <h1><%= order.workflow_state %></h1>
        </td>
        <td>
          <%= number_to_currency(order.total_price) %>
        </td>
        <td><%= order.order_placed_at %></td>
        <td><%= order.user.email %></td>
        <td><%= order.user.name %></td>
        <td><% if order.placed? %>
          <ul>
            <li><%= link_to "Delivered", {action: "mark_delivered!", id: order.id}, method: :put, class: "btn btn-primary" %></li><br>
            <li><%= link_to "Cancelled", {action: "mark_cancelled!", id: order.id}, method: :put, class: "btn btn-success" %></li>
          </ul>
        <% end %></td>
      </tr>
      <% end %>

    </tbody>
  </table>
<% end %>
